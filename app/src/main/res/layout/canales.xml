<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DDDDDD"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/botonpat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="UNITEL"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imagenunitel"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/larevista" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/botonpat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="BOLIVISION"
            />

        <ImageView
            android:id="@+id/imagenbolivision"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@drawable/bolivision" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/botonpat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="BOLIVIA TV"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imagenboliviatv"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@drawable/boliviatv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/botonpat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="ATB"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imagenatb"
            android:layout_width="90dp"
            android:layout_height="50dp"
